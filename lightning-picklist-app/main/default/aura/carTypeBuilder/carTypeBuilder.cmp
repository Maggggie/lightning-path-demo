<aura:component extends="c:carStageBuilder">
    <!-- Attributes --> 
    <aura:attribute name="record" type="Object"/>
    
    <!-- Events --> 
    <aura:registerEvent name="onbuild" type="c:carBuild"/>

    <!-- body --> 
	<div id="Model">
        <figure id='SportsCar' onclick="{!c.build}">
            <img src="/resource/SportsCar" 
                 width="200"/>
            <figcaption class="title">Sports Car</figcaption>
        </figure>
        <figure  id='Sedan' onclick="{!c.build}">
            <img src="/resource/Sedan" 
                 width="200"/>
            <figcaption class="title">Sedan</figcaption>
        </figure>
        <figure id='Suv' onclick="{!c.build}">
            <img src="/resource/Suv" 
                 width="200"/>
            <figcaption class="title">Suv</figcaption>
        </figure>
        <figure id='MiniVan' onclick="{!c.build}">
            <img src="/resource/MiniVan" 
                 width="200"/>
            <figcaption class="title">MiniVan</figcaption>
        </figure>
        <figure id='PickupTruck' onclick="{!c.build}">
            <img src="/resource/PickupTruck" 
                 width="200"/>
            <figcaption class="title">Pickup Truck</figcaption>
        </figure>
    </div>
</aura:component>